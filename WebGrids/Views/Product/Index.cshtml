@model IEnumerable<WebGrids.Models.Product>

@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var grid = new WebGrid(Model, defaultSort: "Name", rowsPerPage: 3);
}

<div>
    @grid.GetHtml(
        mode: WebGridPagerModes.All,

        tableStyle: "table table-inverse",
        headerStyle: "thead-inverse",

        columns: grid.Columns(
            grid.Column("ID"),
            grid.Column("Name"),
            grid.Column("Price"),
            grid.Column("Count")
            )
        )
</div>
@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('tbody tr').on('click', function () {
                location.href = '/Product/Details/' + $(this).find('td:first').text();
            }).hover(function () {
                $(this).toggleClass('mousehover');
            });
        });
    </script>
}