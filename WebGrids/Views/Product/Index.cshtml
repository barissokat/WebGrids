@model IEnumerable<WebGrids.Models.Product>

@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var grid = new WebGrid(Model, defaultSort: "Name", rowsPerPage: 2);
}

<div>
    @grid.GetHtml(
        tableStyle: "table table-striped table-inverse",
        headerStyle: "thead-inverse",

        columns: grid.Columns(
            grid.Column("Name"),
            grid.Column("Price")
            )
        )
</div>